<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@android:color/holo_blue_light">


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <TextView
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:text="PayNav"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/qrImageView"
        android:layout_width="45dp"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_baseline_center_focus_weak_24" />

    <ImageView
        android:id="@+id/notificationImageView"
        android:layout_width="46dp"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_baseline_notifications_active_24" />

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <TextView
        android:layout_width="354dp"
        android:layout_height="161dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="10sp"
        android:layout_weight="1"
        android:text="Hello , Vivek!"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPage"
        android:layout_width="wrap_content"
        android:layout_height="204dp"
        android:layout_margin="20dp">

      <com.google.android.material.tabs.TabLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="bottom"
          app:tabBackground="@drawable/tab_selector"
          app:tabGravity="center"
          app:tabIndicatorHeight="0dp" />

    </androidx.viewpager.widget.ViewPager>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_weight="1">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:background="@drawable/round">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:text="PayBack"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <include
            android:id="@+id/layout1"
            layout="@layout/round1"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="20sp"
             />


        <include
            android:id="@+id/layout2"
            layout="@layout/round2"
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="20sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            android:text="View all >"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginBottom="5sp"
            android:layout_marginTop="5sp"
            android:onClick="viewAll"/>

        <include
            android:id="@+id/layout3"
            layout="@layout/round3"
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="20sp" />

        <include
            android:id="@+id/layout4"
            layout="@layout/round4"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="10dp"/>

















      </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white">

      <ImageView
          android:id="@+id/homeImageView"
          android:layout_width="70dp"
          android:layout_height="70dp"
          android:layout_weight="1"
          android:src="@drawable/home2" />

      <ImageView
          android:id="@+id/duesImageView"
          android:layout_width="70dp"
          android:layout_height="70dp"
          android:layout_weight="1"
          android:src="@drawable/dues" />

      <ImageView
          android:id="@+id/plusImageView"
          android:layout_width="70dp"
          android:layout_height="70dp"
          android:layout_weight="1"
          android:src="@drawable/plus" />

      <ImageView
          android:id="@+id/requestImageView"
          android:layout_width="wrap_content"
          android:layout_height="60dp"
          android:layout_weight="1"
          android:src="@drawable/requests" />

      <ImageView
          android:id="@+id/profileImageView"
          android:layout_width="70dp"
          android:layout_height="70dp"
          android:layout_weight="1"
          android:src="@drawable/profile" />











    </LinearLayout>




  </LinearLayout>























</LinearLayout>